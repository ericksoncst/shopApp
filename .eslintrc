{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {}
    }
  },
  "globals": {
    "__DEV__": true,
    "fetch": false,
    "WebSocket": true,
    "navigator": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["babel", "prettier", "jest", "react-native", "react"],
  "rules": {
    "import/prefer-default-export": 0,
    "import/imports-first": 0,
    "prettier/prettier": "error",
    "linebreak-style": 0,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "no-unused-vars": 0,
    "no-throw-literal": 0,
    "camelcase": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "array-callback-return": 0,
    "no-case-declarations": 0,
    "new-cap": 0
  }
}
